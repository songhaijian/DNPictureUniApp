.album_detail_top {
  position: relative;
}
.album_detail_top .album_detail_top_info {
  position: absolute;
  left: 0;
  bottom: 20rpx;
  color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 0 20rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
}
.album_detail_top .album_detail_top_info .album_detail_top_info_name {
  font-size: 40rpx;
}
.album_detail_top .album_detail_top_info .album_detail_top_info_btn {
  background-color: #d4237a;
  padding: 10rpx;
  border-radius: 10rpx;
}
.album_detail_info {
  padding: 20rpx;
}
.album_detail_info .album_detail_user_info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.album_detail_info .album_detail_user_info image {
  width: 50rpx;
}
.album_detail_info .album_detail_user_info .album_detail_nickname {
  font-size: 30rpx;
  font-weight: 600;
  color: #000;
  margin-left: 20rpx;
}
.album_detail_info .album_detail_user_desc {
  margin-top: 10rpx;
}
.album_detail_list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.album_detail_list .album_detail_list_item {
  width: 33.33%;
  border: 5rpx solid #fff;
}

